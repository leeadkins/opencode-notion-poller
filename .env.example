# Notion Integration Token
NOTION_TOKEN=your_notion_integration_token_here

# Notion Database ID (from the database URL)
NOTION_DATABASE_ID=your_database_id_here

# OpenCode base URL (default: http://localhost:4096)
OPENCODE_BASE_URL=http://localhost:4096

# Interval in minutes (default: 30)
CHECK_INTERVAL_MINUTES=30

# The agent name that triggers OpenCode sessions
OPENCODE_AGENT_NAME=OpenCode

# Default person to reassign tasks to when complete
DEFAULT_REASSIGN_TO=YourName

# OpenCode model configuration
OPENCODE_MODEL_PROVIDER=google
OPENCODE_MODEL_ID=gemini-3-flash-preview

# Trigger file for immediate checks (default: .trigger)
# Touch this file to trigger an immediate task check
TRIGGER_FILE=.trigger

# Project path mappings (JSON format)
# Maps Notion "Project" field values to filesystem paths
PROJECT_MAPPINGS={"Mobile":"/absolute/path","Service":"/absolute/path"}
